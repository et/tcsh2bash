module Tcsh2Bash
  grammar Conditional
    include Symbols

    rule conditional_expression
      if_statement
    end

    rule if_statement
      if_one_line
    end

    rule if_one_line
      'if' space open_paren bool_expr close_paren statement {
        def to_bash
          bool_expr.to_bash statement.to_bash
        end
      }
    end

    rule bool_expr
      'balh'
    end

  end
end
