module Tcsh2Bash
  grammar Conditional
    include Boolean

    rule statement
      if_statement / super
    end

    rule if_statement
      if_multi_line / if_one_line
    end

    rule if_multi_line
      if_opening 'then' newline statements newline "endif" <IfMultiLine>
    end

    rule if_one_line
      if_opening statement <IfOneLine>
    end

    rule if_opening
      'if' space* paren_bool_expr space* <IfOpening>
    end
  end
end
