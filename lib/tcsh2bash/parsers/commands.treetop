module Tcsh2Bash
  grammar Commands
    include Assignment

    # @todo - Works only for if statements, ajust this
    rule multiple_commands
      command rest_of_commands:(newline addl:(!"endif" command))* <MultipleCommands>
    end

    rule command
      assignment / any_command
    end

    rule any_command
      (!end_any_command .)+ <AnyCommand>
    end

    rule end_any_command
      newline / eof
    end
  end
end
