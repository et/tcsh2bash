module Tcsh2Bash
  grammar Tcsh
    include Assignment

    rule tcsh
      (assignment white*)* {
        def to_bash
          output = ""
          elements.map do |e|
            output << e.assignment.to_bash << "\n"
          end
          output
        end
      }
    end

    rule unparseable
      .* !. {
        def to_bash
          'Unable to parse: ' + text_value
        end
      }
    end

  end
end
