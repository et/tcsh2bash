module Tcsh2Bash
  grammar Tcsh
    include Assignment
    include Conditional

    # Handle multiple lines
    # Parse the first line, then handle the rest of the
    # lines with the rest_of_lines label.
    rule lines
      line rest_of_lines:(newline line)* <Lines>
    end

    rule line
      tcsh_line / unparseable_line
    end

    rule tcsh_line
      assignment / if_statement / comment
    end

    rule unparseable_line
      [^\n]* <UnparseableLine>
    end

  end
end
